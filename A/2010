#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int s[n];
        int sum=0;
        for(int i=0;i<n;i++){
            cin>>s[i];
            if(i%2==0){
                sum=sum+s[i];
            }else{
                sum=sum-s[i];
            }
        }
        cout<<sum<<endl;
    }
  

}
