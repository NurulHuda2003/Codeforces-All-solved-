#include<bits/stdc++.h>
using namespace std;
int main(){
    string n;
    cin>>n;
    int flag=0;
    for(int i=0;i<n.size();i++){
        if(n[i]=='4' || n[i]=='7'){
            flag++;
        }/*else{
            flag--;
        }*/
    }
    
    if(flag==4 ||flag==7){
        cout<<"YES"<<endl;
    }else{
        cout<<"NO"<<endl;}

}
/*Here flag count the number of 4 and 7 that are presented in the code. if the number of 4's and 7's in number is equal to 4 or 7 then the number is lucky.. even if number length is 10000.*/
